// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// === IDENTITY & ACCESS ===

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  passwordHash  String
  displayName   String
  role          Role         @default(MEMBER)
  status        UserStatus   @default(ACTIVE)
  avatarUrl     String?
  phone         String?
  invitedBy     String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Phase 2 — Profile
  bio            String?
  location       String?
  branchName     String?
  grampsPersonId String?

  media         Media[]
  auditLogs     AuditLog[]   @relation("actor")
  refreshTokens RefreshToken[]
  personLink    UserPersonLink?
  editRequests  PersonEditRequest[] @relation("editRequester")
  reviewedEdits PersonEditRequest[] @relation("editReviewer")

  // Phase 2 — Community
  posts         Post[]
  comments      Comment[]
  createdEvents Event[]        @relation("eventCreator")
  rsvps         RSVP[]
  notifications Notification[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("refresh_tokens")
}

model InviteLink {
  id        String    @id @default(cuid())
  code      String    @unique
  role      Role      @default(MEMBER)
  maxUses   Int       @default(1)
  usedCount Int       @default(0)
  expiresAt DateTime?
  createdBy String
  createdAt DateTime  @default(now())

  @@map("invite_links")
}

enum Role {
  ADMIN
  EDITOR
  ARCHIVIST
  MODERATOR
  MEMBER
  GUEST
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  PENDING
}

// === MEDIA & ARCHIVE ===

model Media {
  id              String     @id @default(cuid())
  fileKey         String     // S3 object key
  fileName        String
  mimeType        String
  fileSize        Int
  title           String?
  description     String?
  date            DateTime?
  linkedPersonId  String?    // Gramps person handle
  linkedEventType String?    // birth, death, marriage...
  state           MediaState @default(PENDING)
  uploaderId      String
  uploader        User       @relation(fields: [uploaderId], references: [id])
  reviewedBy      String?
  reviewedAt      DateTime?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  @@map("media")
}

enum MediaState {
  PENDING
  PUBLISHED
  REJECTED
}

// === AUDIT LOG ===

model AuditLog {
  id          String   @id @default(cuid())
  actorId     String
  actor       User     @relation("actor", fields: [actorId], references: [id])
  action      String   // CREATE, UPDATE, DELETE, EXPORT, LOGIN...
  entityType  String   // user, person, media, family...
  entityId    String?
  diffSummary Json?    // { field: { old, new } }
  ipAddress   String?
  createdAt   DateTime @default(now())

  @@index([actorId])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}

// === PRIVACY CONFIG ===

model PrivacyConfig {
  id                String   @id @default(cuid())
  hideLivingDetails Boolean  @default(true)
  memberCanSee      Json     // ["name", "birthYear"]
  editorCanSee      Json     // ["name", "birthYear", "birthDate", "phone"]
  adminCanSee       Json     // ["*"]
  updatedAt         DateTime @updatedAt

  @@map("privacy_configs")
}

// === BACKUP ===

model BackupRecord {
  id        String   @id @default(cuid())
  type      String   // GEDCOM, DB_SNAPSHOT
  fileKey   String   // S3 key
  fileSize  Int
  createdBy String
  createdAt DateTime @default(now())

  @@map("backup_records")
}

// === MEMBER LINKING ===

model UserPersonLink {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  personHandle String   @unique  // Gramps handle (e.g. "P25")
  linkedBy     String   // admin userId who created the link
  linkedAt     DateTime @default(now())

  @@map("user_person_links")
}

// === EDIT APPROVAL WORKFLOW ===

enum EditRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model PersonEditRequest {
  id              String            @id @default(cuid())
  requesterId     String
  requester       User              @relation("editRequester", fields: [requesterId], references: [id])
  targetHandle    String            // person handle being edited
  targetName      String            // snapshot of person name at edit time
  editType        String            // UPDATE_PERSON | CREATE_PERSON | DELETE_PERSON | ADD_SPOUSE
  fieldChanges    Json              // { field: { old, new } }
  reason          String?           // optional note from requester
  status          EditRequestStatus @default(PENDING)
  reviewerId      String?
  reviewer        User?             @relation("editReviewer", fields: [reviewerId], references: [id])
  reviewNote      String?
  reviewedAt      DateTime?
  createdAt       DateTime          @default(now())

  @@index([requesterId])
  @@index([targetHandle])
  @@index([status])
  @@index([createdAt])
  @@map("person_edit_requests")
}

// === PHASE 2: NEWS FEED ===

enum PostType {
  ANNOUNCEMENT  // Thông báo chính thức
  STORY         // Câu chuyện, chia sẻ
  FUND          // Báo cáo quỹ họ
}

enum PostStatus {
  DRAFT
  PUBLISHED
  HIDDEN
  DELETED
}

model Post {
  id        String     @id @default(cuid())
  authorId  String
  author    User       @relation(fields: [authorId], references: [id])
  type      PostType   @default(ANNOUNCEMENT)
  title     String?
  body      String     @db.Text
  mediaRefs String[]
  isPinned  Boolean    @default(false)
  status    PostStatus @default(PUBLISHED)
  comments  Comment[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([authorId])
  @@index([status, createdAt])
  @@map("posts")
}

model Comment {
  id        String    @id @default(cuid())
  postId    String
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  authorId  String
  author    User      @relation(fields: [authorId], references: [id])
  body      String
  parentId  String?
  parent    Comment?  @relation("replies", fields: [parentId], references: [id])
  replies   Comment[] @relation("replies")
  createdAt DateTime  @default(now())

  @@index([postId])
  @@index([authorId])
  @@map("comments")
}

// === PHASE 2: EVENTS & CALENDAR ===

enum EventType {
  MEMORIAL    // Giỗ
  MEETING     // Họp họ
  FESTIVAL    // Lễ hội / Thanh minh
  BIRTHDAY    // Sinh nhật
  GENERAL     // Khác
}

model Event {
  id          String    @id @default(cuid())
  title       String
  description String?   @db.Text
  startAt     DateTime
  endAt       DateTime?
  location    String?
  type        EventType @default(MEMORIAL)
  createdBy   String
  creator     User      @relation("eventCreator", fields: [createdBy], references: [id])
  isRecurring Boolean   @default(false)
  recurrence  Json?     // { pattern: "yearly", lunarDate: "..." }
  rsvps       RSVP[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([startAt])
  @@index([type])
  @@map("events")
}

model RSVP {
  id          String @id @default(cuid())
  eventId     String
  event       Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId      String
  user        User   @relation(fields: [userId], references: [id])
  status      String @default("PENDING") // GOING, NOT_GOING, MAYBE
  guestsCount Int    @default(0)
  note        String?
  createdAt   DateTime @default(now())

  @@unique([eventId, userId])
  @@map("rsvps")
}

// === PHASE 2: NOTIFICATIONS ===

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // NEW_POST, NEW_COMMENT, EVENT_REMINDER, RSVP_UPDATE
  title     String
  message   String
  linkUrl   String?  // e.g. /feed, /events/xyz
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, isRead])
  @@index([createdAt])
  @@map("notifications")
}
